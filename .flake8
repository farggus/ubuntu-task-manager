[flake8]
max-line-length = 120
max-complexity = 15
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache
ignore =
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
per-file-ignores =
    __init__.py: F401
